html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
		link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
		link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Hammersmith+One|Marvel|Source+Code+Pro")
		link(rel="stylesheet" href="css/remote.css")
		title Scoreboard Remote
	body
		
		h1#maintitle.text-center Remote
		.container.text-center
			.col-xs-6
				button#start.btn.btn-lg.btn-success.timerbutton Start
			.col-xs-6
				button#stop.btn.btn-lg.btn-danger.timerbutton Pause
		.text-center
			p#timerstatus
		.text-center
			
		br
		
		.text-center#scores
			.col-xs-6
				h3#teamhometitle.teamtitle
				.btn-group-vertical
					
					input.form-control.text-center#teamhomescore(type="number")
					.scorebutton.btn#teamhomeplus: span.glyphicon.glyphicon-plus
					
					
			.col-xs-6#teamaway
				h3#teamawaytitle.teamtitle
				.btn-group-vertical
					
					input.form-control.text-center#teamawayscore(type="number")
					.scorebutton.btn#teamawayplus: span.glyphicon.glyphicon-plus
					
		br
		.text-center
		br
		br
		.text-center

			button.btn.btn-danger(data-toggle="modal" data-target="#clearClockConfirm") Reset Clock
		br
		// Popup to confirm clearing the clock
		#clearClockConfirm.modal.fade(role='dialog' aria-hidden='false')
			.modal-dialog
				.modal-content
					.modal-header
						button.close(data-dismiss='modal' aria-hidden='true'): span.glyphicon.glyphicon-remove-circle
						h4.modal-title Reset Game Clock
					.modal-body
						h6 WARNING
						p This will reset the game clock. This action CANNOT be undone.
					.modal-footer
						button.btn.btn-success Cancel
						button#resetclock.btn.btn-danger(data-dismiss='modal' aria-hidden='true') Reset Clock
		script(src="socket.io/socket.io.js")
		script(src="//code.jquery.com/jquery-1.11.0.min.js")
		script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
		script(src="js/remote.js")
